@model IEnumerable<Cumulative.Models.Student>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>List of Students</title>
    <style>
        /* Styles for the course list */
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
        }

        .student-table {
            width: 100%;
            margin: 20px auto;
        }

        .student-table th, .student-table td {
            padding: 12px 15px;
            border: 2px solid #ddd;
            text-align: left;
        }

        .student-table th {
            background-color: #34495e;
            color: white;
        }

        .student-link {
            color: #2980b9;
            text-decoration: none;
            font-weight: bold;
        }

        student-link:hover {
            text-decoration: underline;
        }

        .label-dropdown-container label{
            font-weight: bold;
            display: inline-block;
            vertical-align: middle;
        }

        #studentDropdown {
            display: inline-block;
            padding: 12px 15px;
            width: 300px;
            border: 2px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            background-color: #f9f9f9;
            color: #34495e;
            margin-left: 10px;
        }

        #studentDropdown:hover {
            border-color: #2980b9;
        }

        #studentDropdown:focus {
            outline: none;
            border-color: #34495e;
        }

        #studentDropdown option {
            padding: 10px;
            background-color: #f9f9f9;
            color: #34495e;
        }
    </style>
</head>
<body>

    <h1>List of Students</h1>

    <table class="student-table">
        <thead>
            <tr>
                <th>Student Frist Name</th>
                <th>Student Last Name</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cumulative.Models.Student student in Model)
            {
                <tr>
                    <td>@student.StudentFName</td>
                    <td>@student.StudentLName</td>
                    <td><a class="student-link" href="/StudentPage/Show/@student.StudentId">View Details</a></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="label-dropdown-container">
        <label for="studentDropdown">Search for a student by their student number:</label>
        <select id="studentDropdown" onchange="navigateToStudentDetails()">
            <option value="">Select Student by Student Number</option>
            @foreach (var SelectedStudent in Model.OrderByDescending(t => t.StudentNumber))
            {
                <option value="@SelectedStudent.StudentId">
                    @SelectedStudent.StudentNumber
                </option>
            }
        </select>
    </div>

    <script>
        function navigateToStudentDetails() {
            var studentId = document.getElementById("studentDropdown").value;
            if (studentId) 
            {
                window.location.href = `/StudentPage/Show/${studentId}`;
            }
        }
    </script>
</body>
</html>
