@model Cumulative.Models.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course details</title>
    <style>
        /* Styles for the course profile page */
        body {
            font-family: Arial, sans-serif;
        }

        .course-details-container {
            width: 80%;
            margin: 0 auto;
            text-align: center;
            padding-top: 50px;
        }

        .course-details-container h1 {
            font-size: 2.5em;
            color: #333;
            margin-bottom: 20px;
        }

        .course-card {
            display: inline-block;
            background-color: #f0f0f5;
            padding: 25px;
            border-radius: 10px;
            text-align: left;
            width: 60%;
            margin: 0 auto;
        }

        .course-card h2 {
            color: #444;
            font-size: 2em;
            margin-bottom: 15px;
        }

        .course-card p {
            font-size: 1.2em;
            color: #555;
            margin: 0.5em 0;
        }

        .course-card p strong {
            color: #333;
        }

        .course-card a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1.1em;
        }

        .course-card a:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <div class="course-details-container">
        <h1>Course details</h1>
        <div class="course-card">
            <h2>@Model.CourseCode</h2>
            <h2>@Model.CourseName</h2>
            <p><strong>Teacher ID:</strong> @Model.TeacherId</p>
            <p><strong>Start Date:</strong> @Model.StartDate</p>
            <p><strong>Finish Date:</strong> @Model.FinishDate</p>
            <a href="/CoursePage/List">Back to List</a>
        </div>
    </div>

</body>
</html>
